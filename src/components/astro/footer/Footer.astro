---
import { Image } from "astro:assets";
import { getLocale, getLocaleUrl } from "astro-i18n-aut";
import { loadNamespaces, t } from "../../../i18n/i18n";

interface Props {
    accentColor: string;
}

const { accentColor } = Astro.props;

// i18next
const locale = getLocale(Astro.url);
const namespaces = ["footer"];
await loadNamespaces(locale, namespaces);

import astroSvg from "../../../../public/assets/img/astro/simple-full-logo-light.svg";
import LanguageSelector from "./LanguageSelector.astro";
---

<footer class="footer-container">
    <LanguageSelector accentColor={accentColor} showFlag={true} />
    <p>
        {t("footer:PageCreatedBy")}
        {" "}
        <a href="https://astro.build/" aria-label="Astro Framework." title="Astro Framework">
            <Image src={astroSvg} alt="Astro.build logo." class="svg-astro" />
        </a>
    </p>
    <p>{t("footer:Host")}{" "}<a href="https://www.github.com" target="_blank"> {t("footer:Github")}</a>.</p>
    <div class="links">
        <a href={getLocaleUrl("/", locale)} rel="prefetch"><i class="bi bi-house-fill"></i> {t("footer:HomePage")}</a>
        {"|"}
        <a href={getLocaleUrl("/contact", locale)} rel="prefetch"><i class="bi bi-envelope-fill"></i> {t("footer:ContactMe")}</a>
    </div>
</footer>

<style define:vars={{ accentColor }}>
    :root {
        --footer-color: rgba(255, 255, 255, 0.5);
    }

    /* Footer */
    .footer-container {
        width: max-content;
        gap: 0.25rem;
        display: flex;
        flex-direction: column;
        height: auto;
        margin: 0px auto;
        padding: 2rem;
        text-align: center;
        font-size: 0.8rem;
        color: var(--footer-color);
        font-weight: 300;
    }

    :global(.svg-astro) {
        display: inline-block;
        vertical-align: middle;
        margin-left: 2px;
        width: 45px;
        height: 15px;
        background-size: contain;
        background-repeat: no-repeat;
        filter: invert(100%) grayscale(100%);
        opacity: 50%;
    }

    .links {
        display: flex;
        justify-content: center;
        gap: 0.25em;
    }

    a {
        color: rgba(var(--accentColor), 1);

        &:visited {
            color: rgba(var(--a-visited), 1);
        }

        i {
            margin-right: 0.25rem;
            color: var(--footer-color);
        }
    }
</style>
