---
import { Image } from "astro:assets";
import { getLocaleUrl, getLocale } from "astro-i18n-aut";
import { loadNamespaces } from "../../../i18n/i18n";

// Images
import profilePicture from "../../../assets/img/profile.png";

// i18next
const locale = getLocale(Astro.url);
const namespaces = ["landing"];
await loadNamespaces(locale, namespaces);
---

<div class="intro-container">
    <div class="profile-picture-wrapper">
        <Image class="profile-picture" src={profilePicture} width={220} height={220} format="avif" alt="Profile picture" />
    </div>
    <div class="profile-container">
        <div class="profile-info-container">
            <h1>Dalibor Hon</h1>
            <h2>Business Consultant<span class="hide-sm"> from <strong>Czech Republic</strong></span></h2>
            <div class="location">
                <i class="bi bi-geo-alt-fill"></i>
                <strong>Ostrava, Czech Republic</strong>
            </div>
        </div>
        <div class="profile-social-container">
            <a href="#" class="github-link">
                <i class="bi bi-github"></i>
                <p>Github</p>
            </a>
            <a href="#" class="linkedin-link">
                <i class="bi bi-linkedin"></i>
                <p>LinkedIn</p>
            </a>
            <a href="#contact" class="contact-link">
                <i class="bi bi-envelope-fill"></i>
                <p>Contact</p>
            </a>
            <a href={getLocaleUrl("/resume", locale)} class="resume-link" data-astro-prefetch="viewport">
                <i class="bi bi-file-person-fill"></i>
                <p>Resume</p>
            </a>
        </div>
    </div>
</div>

<style>
    .intro-container {
        width: 600px;
        background-color: var(--card-bg);
        border: 1px solid rgba(255, 255, 255, 0.1);
        border-radius: 15px;
        padding: 1rem;
        position: relative;

        @media (max-width: 600px) {
            width: calc(100vw - 20px);
        }

        @media (max-width: 468px) {
            padding: unset;
            border-radius: unset;
            border: unset;
            background-color: unset;
        }
    }

    .profile-container {
        width: 100%;
        display: flex;
        flex-direction: column;
        gap: 3rem;
        position: relative;
    }

    .profile-picture-wrapper {
        width: clamp(100px, 50vw, 150px);
        height: clamp(100px, 50vw, 150px);
        margin-left: auto;
        margin-right: auto;
        transform: translateY(-50%);
        position: relative;

        @media (max-width: 468px) {
            transform: unset;
        }
    }

    .profile-picture {
        display: block;
        width: 100%;
        height: 100%;
        object-fit: cover;
        border-radius: 50%;
        box-shadow:
            0px 5px 30px 0px rgba(var(--accent), 1),
            0px 0px 0px 7px rgba(var(--accent), 0.5);
    }

    @media (max-width: 468px) {
        .hide-sm {
            display: none;
        }
    }

    .profile-info-container {
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        gap: 0.5rem;
        margin-top: -45px;

        @media (max-width: 600px) {
            padding: 0rem;
            border-radius: unset;
            border: unset;
            background-color: unset;
        }

        @media (max-width: 468px) {
            margin-top: 25px;
        }

        strong {
            font-weight: 700;
        }

        & h1 {
            font-size: clamp(2rem, 15vw, 4rem);
            font-weight: 500;
            color: rgba(var(--accent), 1);
        }

        .location {
            display: inline-flex;

            & i {
                margin-right: 5px;
            }
        }
    }

    .profile-social-container {
        display: flex;
        flex-wrap: wrap;
        justify-content: space-around;
        align-items: center;
        padding: 1rem;
        gap: 1rem;
        width: 100%;
        height: 100%;
        margin-bottom: 1rem;

        @media (max-width: 468px) {
            flex-direction: column;
            gap: 0;
            padding: 0;
        }

        a {
            transition: transform 300ms;
            display: flex;
            flex-direction: column;
            gap: 1rem;
            align-items: center;
            justify-content: center;
            position: relative;
            color: white;
            width: 60px;
            height: 60px;
            border-radius: 50%;
            z-index: 1;
            font-weight: 600;

            @media (max-width: 468px) {
                width: 100%;
                height: 100%;
                border-radius: 0;
                flex-direction: row;
                padding: 0.5rem;

                &:first-of-type {
                    border-top-left-radius: 15px;
                    border-top-right-radius: 15px;
                }

                &:last-of-type {
                    border-bottom-left-radius: 15px;
                    border-bottom-right-radius: 15px;
                }
            }

            p {
                position: absolute;
                z-index: 0;
                bottom: -30px;
                font-size: 1rem;
                transition: all 300ms;

                @media (max-width: 468px) {
                    position: unset;
                    min-width: 80px;
                    text-align: center;
                }
            }

            &:hover {
                text-decoration: none;

                @media (width > 768px) {
                    transform: scale(1.15);
                }
            }

            &.github-link {
                background: linear-gradient(45deg, #324e63, #414447);
                box-shadow: 0px 0px 12px rgba(55, 75, 90, 0.6);
            }

            &.linkedin-link {
                background: linear-gradient(45deg, #3468b1, #4875b4);
                box-shadow: 0px 0px 12px rgba(71, 116, 179, 0.6);
            }

            &.contact-link {
                background: linear-gradient(45deg, #d5135a, #f05924);
                box-shadow: 0px 0px 12px rgba(223, 45, 70, 0.6);
            }

            &.resume-link {
                background: linear-gradient(45deg, rgba(var(--accent-resume), 1), rgba(var(--accent-resume), 1));
                box-shadow: 0px 0px 12px rgba(var(--accent-resume), 0.6);
            }
        }

        i {
            display: flex;
            justify-content: center;
            align-items: center;
            font-size: 2rem;
            position: relative;
        }
    }
</style>
