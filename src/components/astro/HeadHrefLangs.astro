---
import { getLocaleUrl } from "astro-i18n-aut";
import * as locales from "../../i18n/locales";
---

<Fragment>
    <link rel="alternate" hreflang="x-default" href={getLocaleUrl(Astro.url, locales.defaultLocale)} />
    {
      locales.getLocales().map((supportedLocale) => (
          <link rel="alternate" hreflang={supportedLocale} href={getLocaleUrl(Astro.url, supportedLocale)}/>
        ))
    }
</Fragment>
