---
import { getLocaleUrl, localeKeys, defaultLocale } from "astro-i18n-aut";

const site = import.meta.env.SITE;
---

<Fragment>
    <link rel="alternate" hreflang="x-default" href={site} />
    {
      localeKeys.map((supportedLocale) => (
          <link rel="alternate" hreflang={supportedLocale} href={site + getLocaleUrl(Astro.url, supportedLocale)}/>
        ))
    }
</Fragment>
