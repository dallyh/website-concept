---
import { getLocaleUrl } from "astro-i18n-aut";
import { getLocale } from "astro-i18n-aut";

interface Props {
    accentColor: string;
}

const { accentColor } = Astro.props;
const baseUrl = import.meta.env.BASE_URL;
const locale = getLocale(Astro.url);
---

<a href={getLocaleUrl("/", locale)} rel="prefetch" aria-label="Go home" title="Home page" class="floating-menu">
    <i class="gg-home"></i>
</a>

<style define:vars={{ accentColor }}>
    @import url("css.gg/icons/css/home.css");

    .floating-menu {
        position: fixed;
        display: flex;
        justify-content: center;
        align-items: center;
        width: 60px;
        height: 60px;
        bottom: 20px;
        right: 20px;
        background-color: var(--card-color);
        color: #fff;
        border-radius: 50%;
        text-align: center;
        font-size: 30px;
        border: 1px solid rgba(255, 255, 255, 0.2);
        z-index: 2000;

        @media (max-width: 500px) {
            bottom: 15px;
            right: 15px;
        }

        & i {
            color: rgba(var(--accentColor), 1);
            transition: all 300ms ease-in-out;
        }

        &:hover {
            cursor: pointer;

            & i {
                --ggs: 1.2;
            }
        }
    }
</style>
