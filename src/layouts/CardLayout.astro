---
import Card from "../components/astro/Card.astro";
import Footer from "../components/astro/Footer.astro";
import Hero, { type CardStyle } from "../components/astro/Hero.astro";
import Layout from "./Layout.astro";

interface Props {
    accentColor: string;
    cardStyle: CardStyle
}

const { accentColor, cardStyle} = Astro.props;
---

<Layout title="Welcome to Astro.">
    <main>
        <Hero style={cardStyle} />
        <Card accentColor={accentColor}>
            <slot />
        </Card>
    </main>
    <Footer />
</Layout>

<style>
    body {
        max-width: 1200px;
        margin: auto;
    }
</style>
